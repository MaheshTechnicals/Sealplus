<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glass background with higher opacity -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_surface_variant" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Stronger white border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1.5dp"
                android:color="@color/glass_white_border" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>
